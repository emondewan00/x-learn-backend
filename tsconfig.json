{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["@types", "node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "@types/**/*"],
  "exclude": ["node_modules"]
}
